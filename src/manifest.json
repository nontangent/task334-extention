{
  "name": "#TASK334",
  "short_name": "TASK334",
  "description": "地上最ストイックなTODOアプリ",
  "version": "1.4.0",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon-16.png",
		"48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
	"persistent": true
  },
	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/*",
				"https://mobile.twitter.com/*"
			],
			"js": [
				"scripts/loader.js"
			]
		}
	],
	"permissions": [
		"https://*.googleapis.com/*",
		"https://twitter.com/*",
		"https://*.twitter.com/*",
		"webRequest",
		"webRequestBlocking"
	],
	"web_accessible_resources": [
		"scripts/app-loader.js",
		"styles/style.css"
	]
}
