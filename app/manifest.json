{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "1.1.0",
  "manifest_version": 2,
  "default_locale": "ja",
  "icons": {
    "16": "images/icon-16.png",
		"48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
		"persistent": true
  },
	"content_scripts": [
		{
			"matches": [
				"https://twitter.com/*"
			],
			"js": [
				"scripts/loader.js"
			]
		}
	],
	"permissions": [
		"https://ajax.googleapis.com/*",
		"https://*.googleapis.com/*",
		"https://twitter.com/i/timeline",
		"https://twitter.com/*",
		"https://*.twitter.com/*",
		"webRequest",
		"webRequestBlocking"
	],
	"web_accessible_resources": [
		"scripts/app-loader.js",
		"scripts/app.service.js",
		"styles/style.css"
	]
}
